@page "/reviews/{ReviewId:int}/item/{ItemId:int}"

@if (_summary == null)
{
    <div class="text-center">
        <div class="spinner-border" role="status">
            <span class="sr-only">Loading...</span>
        </div>
    </div>
}
else
{
    <h3>@_item.Issue.Title</h3>

    <div>
        @((MarkupString)Markdig.Markdown.ToHtml(_item.FeedbackMarkdown))
    </div>
}
 
